#include<stdio.h>
#include<stdlib.h>

struct caseTerrain
{
  int posX;
  int posY;
  int etat;
  char  contenu;
}caseTerrain;

int main(int argv, char** argc)
{
  FILE* f;
  int taille;
  int i, j;
  printf("bonjour veuillez saisir la taille du terrain ?");
  scanf("%d",&taille);
  creatTerrain(taille);

  struct caseTerrain terrain[taille*taille];
  for(i=0;i<taille;i++){
    for(j=0,j<taille;j++){
      terrain[i+j]={i,j,
    }
  }
 f = fopen("terrainActuel.txt", "w");
 if (f == NULL)
   return 1;
 fwrite(terrain, taille*taille , sizeof(struct caseTerrain), f);
 fclose(f);
 return 0;
}

